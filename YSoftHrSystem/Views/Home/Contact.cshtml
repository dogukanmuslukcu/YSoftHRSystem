    <link href="~/Content/Contact.css" rel="stylesheet" />

    <div class="contact-content">
        <h2 id="title">Doğuş Üniversitesi Dudullu OSB Yerleşkesi</h2>

        <address>
            Doğuş Üniversitesi<br />
            Adres: Esenkent, Dudullu Osb Mah, Nato Yolu Cd 265/ 1, 34775 Ümraniye/İstanbul
        </address>


        <div id="map" style="height: 400px;"></div>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBO4nI7D5t0Db_42E8YXuqFezNV76OyR8&callback=initMap" async defer></script>
    <script>
        function initMap() {
            var universityLocation = {
                lat: 41.00164031982422,
                lng: 29.176177978515625,
            };

            var map = new google.maps.Map(document.getElementById('map'), {
                center: universityLocation,
                zoom: 15
            });

            var marker = new google.maps.Marker({
                position: universityLocation,
                map: map,
                title: 'Doğuş Üniversitesi'
            });
        }
    </script>
