<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Layout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-xxr7CjFVlhGtJtY4X3l74g8+4DHUv4w4tbsW6OK6ovVc4Eyy3cU6WCGJbvv2nv8CIWYO27NapXK+Ar1/5ZVMmw==" crossorigin="anonymous" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="navbar-nav flex-grow-1">
                <li>@Html.ActionLink("YSoftHrSystem", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Hakkımızda", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("İletişim", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Tazminat Hesapla", "ComputeCompensation", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Maaş Hesapla", "ComputeSalary", "Account", new { area = "" }, new { @class = "nav-link" })</li>


                @if (Session["UserId"] != null)
                {
                    <li><a class="nav-link" href="@Url.Action("Logout", "Account")">Çıkış Yap</a></li>
                }
                else
                {
                    <li>@Html.ActionLink("Giriş Yap", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                }
                <li>@Html.ActionLink("Kayıt Ol", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>

    <div class="container bodyFooter">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2024 Ysoft HR System. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>